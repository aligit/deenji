{
  "name": "deenji",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "fa": "deenji/src/locale/messages.fa.xlf"
    }
  },
  "targets": {
    "build": {
      "executor": "@analogjs/platform:vite",
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development",
          "sourcemap": true
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        },
        "fa": {
          "localize": [
            "fa"
          ],
          "mode": "production"
        },
        "fa-dev": {
          "localize": [
            "fa"
          ],
          "mode": "development",
          "sourcemap": true
        }
      },
      "options": {
        "main": "deenji/src/main.ts",
        "configFile": "deenji/vite.config.ts",
        "outputPath": "dist/deenji/client",
        "tsConfig": "deenji/tsconfig.app.json",
        "i18nMissingTranslation": "warning"
      }
    },
    "serve": {
      "executor": "@analogjs/platform:vite-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "deenji:build",
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "deenji:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "deenji:build:production"
        },
        "fa": {
          "buildTarget": "deenji:build:fa-dev",
          "hmr": true
        }
      }
    },
    "extract-i18n": {
      "executor": "@nx/angular:extract-i18n",
      "options": {
        "buildTarget": "deenji:build",
        "format": "xlf",
        "outputPath": "deenji/src/locale",
        "outFile": "messages.xlf"
      }
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "outputs": [
        "{projectRoot}/coverage"
      ]
    }
  },
  "tags": [],
  "sourceRoot": "./deenji/src"
}
